<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="100dp"
    android:layout_marginHorizontal="@dimen/padding_small"
    android:layout_marginTop="@dimen/padding">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/black"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewHero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="@string/hero_image_description"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/nameHeroTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/attributeHeroTextView"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="Dark Willow"
            tools:textColor="@color/black" />

        <TextView
            android:id="@+id/attributeHeroTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewHero"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="Intelligence"
            tools:textColor="@color/black" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>